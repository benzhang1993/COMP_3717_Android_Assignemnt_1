<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountryDetailActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/countryFlag"
            android:layout_width="@dimen/flag_width"
            android:layout_height="@dimen/flag_height"
            style = "@style/ImageView"/>

        <TextView
            android:id="@+id/countryDetailName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/CountryName"/>

        <TextView
            android:id="@+id/countryCapital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/CountryDetail"/>

        <TextView
            android:id="@+id/countryRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/CountryDetail"/>

        <TextView
            android:id="@+id/countryPopulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/CountryDetail"/>

        <TextView
            android:id="@+id/countryArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/CountryDetail"/>

        <TextView
            android:id="@+id/countryBorders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style = "@style/CountryDetail"/>
    </LinearLayout>

</ScrollView>